{
	"compilerOptions": {
		"target": "es5",
		"jsx": "react-jsx",
		"module": "esNext",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": [ "./src/*" ]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist/",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/jest/setup-tests.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
	]
}
